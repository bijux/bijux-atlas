#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
LEGACY_BIN="${ROOT_DIR}/packages/atlasctl/bin/atlasctl"

if [[ -x "${LEGACY_BIN}" ]]; then
  exec "${LEGACY_BIN}" "$@"
fi

echo "atlasctl legacy wrapper is unavailable." >&2
echo "Use: bijux dev atlas <command>" >&2
echo "Example: bijux dev atlas check doctor --format json" >&2
exit 127
