#!/usr/bin/env bash
set -euo pipefail
ROOT="$(CDPATH= cd -- "$(dirname -- "$0")/../.." && pwd)"
cd "$ROOT"

show_help() {
  cat <<'EOF'
bijux-atlas-dev: maintainer script index

Usage:
  scripts/bin/bijux-atlas-dev [--help]

Categories:
  - scripts/check : validation and lint gates
  - scripts/gen   : generated-doc and inventory producers
  - scripts/ci    : CI-only glue entrypoints
  - scripts/dev   : local helper utilities

Policy:
  - Scripts are internal unless listed in configs/ops/public-surface.json.
  - Human-facing ops workflows are make targets and ops/run/*.sh.
EOF
}

if [ "${1:-}" = "--help" ] || [ "${1:-}" = "-h" ]; then
  show_help
  exit 0
fi

show_help
echo
echo "Available check scripts:"
find scripts/check -maxdepth 1 -type f | sort | sed 's#^#- #' || true
echo
echo "Available generator scripts:"
find scripts/gen -maxdepth 1 -type f | sort | sed 's#^#- #' || true
