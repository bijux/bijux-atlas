{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["schema_name", "schema_version", "kind", "items", "tool", "status"],
  "properties": {
    "schema_name": { "const": "atlasctl.list-checks.v1" },
    "schema_version": { "type": "integer", "const": 1 },
    "kind": { "const": "list-checks" },
    "tool": { "type": "string" },
    "status": { "type": "string" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "domain", "tags", "owners"],
        "properties": {
          "id": { "type": "string" },
          "domain": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "owners": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}
