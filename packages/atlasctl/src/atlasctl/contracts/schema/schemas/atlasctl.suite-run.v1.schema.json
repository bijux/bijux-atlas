{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["schema_version", "tool", "status", "suite", "summary", "results", "target_dir"],
  "properties": {
    "schema_version": {"type": "integer", "const": 1},
    "tool": {"type": "string", "const": "atlasctl"},
    "status": {"type": "string", "enum": ["ok", "error"]},
    "suite": {"type": "string"},
    "summary": {
      "type": "object",
      "required": ["passed", "failed", "skipped", "duration_ms"],
      "properties": {
        "passed": {"type": "integer"},
        "failed": {"type": "integer"},
        "skipped": {"type": "integer"},
        "duration_ms": {"type": "integer"}
      },
      "additionalProperties": true
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["index", "label", "kind", "value", "status", "duration_ms"],
        "properties": {
          "index": {"type": "integer"},
          "suite": {"type": "string"},
          "label": {"type": "string"},
          "kind": {"type": "string"},
          "value": {"type": "string"},
          "status": {"type": "string", "enum": ["pass", "fail"]},
          "detail": {"type": "string"},
          "duration_ms": {"type": "integer"}
        },
        "additionalProperties": true
      }
    },
    "target_dir": {"type": "string"}
  },
  "additionalProperties": true
}
