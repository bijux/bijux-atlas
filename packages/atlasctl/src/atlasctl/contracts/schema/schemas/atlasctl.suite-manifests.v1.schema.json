{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "atlasctl suite manifests",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_name",
    "schema_version",
    "tool",
    "status",
    "markers",
    "suites"
  ],
  "properties": {
    "schema_name": {
      "const": "atlasctl.suite-manifests.v1"
    },
    "schema_version": {
      "const": 1
    },
    "tool": {
      "const": "atlasctl"
    },
    "status": {
      "type": "string",
      "enum": [
        "ok",
        "error"
      ]
    },
    "markers": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "suites": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "markers",
          "required_env",
          "default_effects",
          "time_budget_ms"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "markers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "required_env": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "default_effects": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "time_budget_ms": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    }
  }
}
