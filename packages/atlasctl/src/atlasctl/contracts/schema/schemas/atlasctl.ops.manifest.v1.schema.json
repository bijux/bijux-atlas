{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.atlasctl.local/atlasctl.ops.manifest.v1.schema.json",
  "title": "Atlas Ops Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_name",
    "schema_version",
    "name",
    "steps"
  ],
  "properties": {
    "schema_name": {
      "type": "string",
      "enum": [
        "atlasctl.ops.manifest.v1",
        "atlas.ops.manifest.v1"
      ]
    },
    "schema_version": {
      "const": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "command"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "command": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "allow_failure": {
            "type": "boolean",
            "default": false
          }
        }
      }
    }
  }
}
