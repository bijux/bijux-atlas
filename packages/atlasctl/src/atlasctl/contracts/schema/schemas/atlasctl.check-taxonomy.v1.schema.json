{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "atlasctl check taxonomy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_name",
    "schema_version",
    "tool",
    "status",
    "checks"
  ],
  "properties": {
    "schema_name": {
      "const": "atlasctl.check-taxonomy.v1"
    },
    "schema_version": {
      "const": 1
    },
    "tool": {
      "const": "atlasctl"
    },
    "status": {
      "type": "string",
      "enum": [
        "ok",
        "error"
      ]
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "domain",
          "category",
          "severity",
          "tags",
          "owners"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_.-]+$"
          },
          "domain": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "error",
              "warn"
            ]
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "owners": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
