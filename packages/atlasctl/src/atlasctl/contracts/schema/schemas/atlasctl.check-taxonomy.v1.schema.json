{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "atlasctl check taxonomy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_name",
    "schema_version",
    "tool",
    "status",
    "checks",
    "taxonomy"
  ],
  "properties": {
    "schema_name": {
      "const": "atlasctl.check-taxonomy.v1"
    },
    "schema_version": {
      "const": 1
    },
    "tool": {
      "const": "atlasctl"
    },
    "status": {
      "type": "string",
      "enum": [
        "ok",
        "error"
      ]
    },
    "taxonomy": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "domain",
          "count",
          "areas",
          "checks"
        ],
        "properties": {
          "domain": {
            "type": "string"
          },
          "count": {
            "type": "integer",
            "minimum": 0
          },
          "areas": {
            "type": "object",
            "additionalProperties": {
              "type": "integer",
              "minimum": 0
            }
          },
          "checks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "id",
          "domain",
          "category",
          "severity",
          "tags",
          "owners"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^checks_[a-z0-9]+_[a-z0-9]+_[a-z0-9_]+$"
          },
          "domain": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "error",
              "warn",
              "info"
            ]
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "owners": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
