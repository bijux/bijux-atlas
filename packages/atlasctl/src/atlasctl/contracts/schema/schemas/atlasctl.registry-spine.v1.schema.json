{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_name", "schema_version", "commands", "checks", "suites", "owners", "budgets", "capabilities"],
  "properties": {
    "schema_name": { "const": "atlasctl.registry-spine.v1" },
    "schema_version": { "type": "integer", "const": 1 },
    "commands": { "type": "array", "items": { "type": "object" } },
    "checks": { "type": "array", "items": { "type": "object" } },
    "suites": { "type": "array", "items": { "type": "object" } },
    "owners": { "type": "array", "items": { "type": "string" } },
    "budgets": {
      "type": "object",
      "additionalProperties": false,
      "required": ["defaults", "rules_count", "exceptions_count"],
      "properties": {
        "defaults": { "type": "object", "additionalProperties": { "type": "integer" } },
        "rules_count": { "type": "integer", "minimum": 0 },
        "exceptions_count": { "type": "integer", "minimum": 0 }
      }
    },
    "capabilities": { "type": "array", "items": { "type": "object" } }
  }
}
