{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "checks": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "area": {
            "type": "string"
          },
          "default_enabled": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          },
          "docs_link": {
            "minLength": 1,
            "type": "string"
          },
          "domain": {
            "enum": [
              "checks",
              "configs",
              "contracts",
              "docker",
              "docs",
              "license",
              "make",
              "ops",
              "policies",
              "python",
              "repo"
            ],
            "type": "string"
          },
          "gate": {
            "type": "string"
          },
          "groups": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "id": {
            "pattern": "^checks_[a-z0-9]+_[a-z0-9]+_[a-z0-9_]+$",
            "type": "string"
          },
          "impl_ref": {
            "additionalProperties": false,
            "properties": {
              "callable": {
                "type": "string"
              },
              "category": {
                "enum": [
                  "lint",
                  "check"
                ],
                "type": "string"
              },
              "effects": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              "evidence": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              "external_tools": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              "fix_hint": {
                "type": "string"
              },
              "legacy_id": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "module": {
                "type": "string"
              },
              "severity": {
                "enum": [
                  "error",
                  "warn",
                  "info"
                ],
                "type": "string"
              },
              "speed": {
                "enum": [
                  "fast",
                  "slow",
                  "nightly"
                ],
                "type": "string"
              },
              "timeout_ms": {
                "minimum": 1,
                "type": "integer"
              },
              "writes_allowed_roots": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              }
            },
            "required": [
              "module",
              "callable",
              "timeout_ms",
              "speed",
              "severity",
              "category"
            ],
            "type": "object"
          },
          "markers": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "owners": {
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "type": "array"
          },
          "remediation_link": {
            "minLength": 1,
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "title",
          "description",
          "domain",
          "area",
          "gate",
          "owners",
          "groups",
          "markers",
          "docs_link",
          "remediation_link",
          "default_enabled",
          "impl_ref"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "kind": {
      "const": "atlasctl-checks-catalog",
      "type": "string"
    },
    "schema_name": {
      "const": "atlasctl.checks-catalog.v1",
      "type": "string"
    },
    "schema_version": {
      "const": 1,
      "type": "integer"
    }
  },
  "required": [
    "schema_version",
    "kind",
    "checks"
  ],
  "title": "atlasctl.checks-catalog.v1",
  "type": "object"
}
