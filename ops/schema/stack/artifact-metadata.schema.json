{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "schema_version",
    "artifacts_root",
    "stack_artifacts",
    "retention"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "artifacts_root": {
      "type": "string",
      "minLength": 1
    },
    "stack_artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "retention": {
      "type": "object",
      "required": [
        "policy",
        "committed_examples"
      ],
      "properties": {
        "policy": {
          "type": "string",
          "minLength": 1
        },
        "committed_examples": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$id": "ops/schema/stack/artifact-metadata.schema.json"
}
