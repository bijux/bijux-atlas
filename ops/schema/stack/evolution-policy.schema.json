{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "policy_version",
    "freeze_rules",
    "change_controls",
    "compatibility"
  ],
  "properties": {
    "schema_version": {"type": "integer", "const": 1},
    "policy_version": {"type": "string", "minLength": 1},
    "freeze_rules": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "pin_freeze_required",
        "version_manifest_consistency_required",
        "dependency_graph_consistency_required"
      ],
      "properties": {
        "pin_freeze_required": {"type": "boolean"},
        "version_manifest_consistency_required": {"type": "boolean"},
        "dependency_graph_consistency_required": {"type": "boolean"}
      }
    },
    "change_controls": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string", "minLength": 1}
    },
    "compatibility": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cluster_profiles", "minimum_supported_profiles"],
      "properties": {
        "cluster_profiles": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string", "minLength": 1}
        },
        "minimum_supported_profiles": {"type": "integer", "minimum": 1}
      }
    }
  }
}
