{
  "type": "object",
  "required": [
    "schema_version",
    "profiles"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "profiles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "kind_profile",
          "cluster_config"
        ],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "kind_profile": {
            "type": "string",
            "enum": [
              "small",
              "normal",
              "perf"
            ]
          },
          "cluster_config": {
            "type": "string",
            "pattern": "^ops/stack/kind/.+\\.yaml$"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "$id": "ops/schema/stack/profile-manifest.schema.json"
}
