{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "entrypoints",
    "bijux-dev-atlas_commands",
    "actions"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "entrypoints": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "bijux-dev-atlas_commands": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "domain",
          "command",
          "argv",
          "purpose",
          "supports_json",
          "dry_run",
          "artifacts_policy"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "domain": {
            "type": "string",
            "minLength": 1
          },
          "command": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "argv": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "purpose": {
            "type": "string",
            "minLength": 1
          },
          "supports_json": {
            "type": "boolean"
          },
          "dry_run": {
            "type": "string",
            "enum": [
              "required",
              "optional",
              "not_applicable"
            ]
          },
          "artifacts_policy": {
            "type": "string",
            "enum": [
              "artifacts_root_only",
              "none"
            ]
          }
        }
      }
    }
  },
  "$id": "ops/schema/inventory/surfaces.schema.json"
}
