{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "tools"
  ],
  "properties": {
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "required",
          "version_regex",
          "probe_argv"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "required": {
            "type": "boolean"
          },
          "version_regex": {
            "type": "string",
            "minLength": 1
          },
          "probe_argv": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  },
  "$id": "ops/schema/inventory/tools.schema.json"
}
