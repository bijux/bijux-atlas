{
  "$id": "ops/schema/inventory/contract-gate-map.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ops Contract Gate Map",
  "type": "object",
  "required": [
    "schema_version",
    "mappings"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "mappings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "contract_id",
          "gate_ids",
          "command",
          "effects_required",
          "static_only"
        ],
        "properties": {
          "contract_id": {
            "type": "string",
            "pattern": "^OPS-(?:[A-Z0-9]+(?:-[A-Z0-9]+)*-)?[0-9]{3}$"
          },
          "gate_ids": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            },
            "uniqueItems": true
          },
          "command": {
            "type": "string",
            "minLength": 1
          },
          "effects_required": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "subprocess",
                "network",
                "fs"
              ]
            },
            "uniqueItems": true
          },
          "static_only": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
