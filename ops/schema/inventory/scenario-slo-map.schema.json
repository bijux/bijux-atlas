{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "mappings"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "mappings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "scenario_id",
          "slo_ids",
          "drill_ids",
          "load_suites"
        ],
        "properties": {
          "scenario_id": {
            "type": "string",
            "minLength": 1
          },
          "slo_ids": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "drill_ids": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "load_suites": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  },
  "$id": "ops/schema/inventory/scenario-slo-map.schema.json"
}
