{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "schema_version",
    "release",
    "state",
    "frozen_at",
    "pins_source",
    "notes"
  ],
  "properties": {
    "schema_version": {"type": "integer", "const": 1},
    "release": {"type": "string", "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$"},
    "state": {"type": "string", "const": "frozen"},
    "frozen_at": {"type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"},
    "pins_source": {"type": "string", "const": "ops/inventory/pins.yaml"},
    "notes": {"type": "string", "minLength": 1}
  },
  "additionalProperties": false
}
