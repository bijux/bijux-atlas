{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bijux.dev/ops/schema/inventory/placeholder-dirs.schema.json",
  "title": "Inventory Placeholder Directories",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "owner",
    "placeholder_entries"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "minLength": 1
    },
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "owner": {
      "type": "string",
      "minLength": 1
    },
    "placeholder_entries": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "owner",
          "why_exists",
          "purpose",
          "expected_contents",
          "lifecycle_policy"
        ],
        "properties": {
          "path": {
            "type": "string",
            "pattern": "^ops\\/[a-z0-9._\\/-]+$"
          },
          "owner": {
            "type": "string",
            "minLength": 1
          },
          "why_exists": {
            "type": "string",
            "minLength": 1
          },
          "purpose": {
            "type": "string",
            "minLength": 1
          },
          "expected_contents": {
            "type": "string",
            "minLength": 1
          },
          "lifecycle_policy": {
            "type": "string",
            "minLength": 1
          },
          "sunset_review_by": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          }
        }
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "placeholder_dirs": {
      "description": "Deprecated compatibility field; use placeholder_entries[].path.",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^ops\\/[a-z0-9._\\/-]+$"
      },
      "uniqueItems": true
    }
  }
}
