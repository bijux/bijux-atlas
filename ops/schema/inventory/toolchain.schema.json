{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["schema_version", "images", "github_actions", "tools"],
  "properties": {
    "schema_version": {"type": "integer", "const": 1},
    "images": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {"type": "string", "minLength": 1}
    },
    "github_actions": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["ref", "sha"],
        "properties": {
          "ref": {"type": "string", "minLength": 1},
          "sha": {
            "type": "string",
            "pattern": "^[0-9a-f]{40}$"
          }
        },
        "additionalProperties": false
      }
    },
    "tools": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["required", "version_regex", "probe_argv"],
        "properties": {
          "required": {"type": "boolean"},
          "version_regex": {"type": "string", "minLength": 1},
          "probe_argv": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "string", "minLength": 1}
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
