{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "authoritative", "role", "registry_meaning", "items"],
  "properties": {
    "schema_version": {"type": "integer", "const": 1},
    "authoritative": {"type": "boolean", "const": true},
    "role": {"type": "string", "const": "authored"},
    "registry_meaning": {"type": "string", "minLength": 1},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "schema", "generator"],
        "properties": {
          "path": {"type": "string", "minLength": 1},
          "schema": {"type": "string", "pattern": "^ops/schema/.+\\.schema\\.json$"},
          "generator": {"type": "string", "minLength": 1}
        }
      }
    }
  }
}
