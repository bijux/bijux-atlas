{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ops Scorecard Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "generated_by",
    "run_id",
    "generated_at",
    "status",
    "score",
    "summary",
    "budgets"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "generated_by": {
      "type": "string",
      "minLength": 1
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "minLength": 1
    },
    "score": {
      "type": ["number", "integer"]
    },
    "summary": {
      "type": "object"
    },
    "budgets": {
      "type": "object"
    }
  }
}
