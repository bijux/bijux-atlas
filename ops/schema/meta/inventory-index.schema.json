{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Inventory Index Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "generated_from", "generated_by", "items"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "generated_from": {
      "type": "string",
      "pattern": "^ops/.+"
    },
    "generated_by": {
      "type": "string",
      "minLength": 1
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "sha256"],
        "properties": {
          "path": {
            "type": "string",
            "pattern": "^ops/.+"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        }
      }
    }
  }
}
