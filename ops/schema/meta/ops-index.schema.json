{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ops Index Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "generated_by", "domains", "reports"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "generated_by": {
      "type": "string",
      "minLength": 1
    },
    "domains": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[_a-z0-9-]+$"
      }
    },
    "reports": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^ops/.+"
      }
    }
  }
}
