{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "schema_version",
    "cardinality",
    "required_metric_labels",
    "endpoint_class_metric_requirements",
    "span_attribute_requirements",
    "lag"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "cardinality": {
      "type": "object",
      "required": [
        "forbidden_labels",
        "max_series_per_metric"
      ],
      "additionalProperties": false,
      "properties": {
        "forbidden_labels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "max_series_per_metric": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "required_metric_labels": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "endpoint_class_metric_requirements": {
      "type": "object",
      "required": [
        "cheap",
        "medium",
        "heavy"
      ],
      "additionalProperties": false,
      "properties": {
        "cheap": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "medium": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "heavy": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "span_attribute_requirements": {
      "type": "object",
      "required": [
        "cheap",
        "medium",
        "heavy"
      ],
      "additionalProperties": false,
      "properties": {
        "cheap": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "medium": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "heavy": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "lag": {
      "type": "object",
      "required": [
        "max_days_since_pass_on_main"
      ],
      "additionalProperties": false,
      "properties": {
        "max_days_since_pass_on_main": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  },
  "$id": "ops/schema/observe/budgets.schema.json"
}
