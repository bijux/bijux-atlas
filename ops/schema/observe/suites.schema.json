{
  "type": "object",
  "required": [
    "schema_version",
    "owner",
    "suites"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "owner": {
      "type": "string",
      "minLength": 1
    },
    "suites": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "description",
          "tests"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "tests": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^test_[a-z0-9_]+\\.sh$"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "$id": "ops/schema/observe/suites.schema.json"
}
