{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ops/schema/policy/effect-tool-version-policy.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "tools"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "tools": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["allowed_major"],
        "properties": {
          "allowed_major": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    }
  }
}
