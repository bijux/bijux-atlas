{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ops/schema/policy/required-contracts.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "contracts"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "contracts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["domain", "contract_id", "lanes", "owner", "rationale"],
        "properties": {
          "domain": {
            "type": "string",
            "minLength": 1
          },
          "contract_id": {
            "type": "string",
            "minLength": 1
          },
          "lanes": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "enum": ["pr", "merge", "release"]
            }
          },
          "owner": {
            "type": "string",
            "minLength": 1
          },
          "rationale": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
