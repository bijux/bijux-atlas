{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "strategy",
    "rollback_steps",
    "requires",
    "max_rollback_depth"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "strategy": {
      "type": "string",
      "minLength": 1
    },
    "rollback_steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "requires": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "max_rollback_depth": {
      "type": "integer",
      "minimum": 1
    }
  },
  "$id": "ops/schema/datasets/rollback-policy.schema.json"
}
