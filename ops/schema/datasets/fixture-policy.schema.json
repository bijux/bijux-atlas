{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "allow_remote_download",
    "fixture_roots",
    "allowed_kinds",
    "allowed_binary_paths",
    "policy"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "allow_remote_download": {
      "type": "boolean"
    },
    "fixture_roots": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "allowed_kinds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "allowed_binary_paths": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^ops/datasets/fixtures/.+"
      }
    },
    "policy": {
      "type": "string",
      "minLength": 1
    }
  },
  "$id": "ops/schema/datasets/fixture-policy.schema.json"
}
