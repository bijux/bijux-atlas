{
  "type": "object",
  "required": [
    "schema_version",
    "profiles"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "profiles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "values_file",
          "suite"
        ],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "values_file": {
            "type": "string",
            "pattern": "^ops/k8s/values/.+\\.yaml$"
          },
          "suite": {
            "type": "string",
            "enum": [
              "install-gate",
              "k8s-suite",
              "nightly"
            ]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "$id": "ops/schema/k8s/install-matrix.schema.json"
}
