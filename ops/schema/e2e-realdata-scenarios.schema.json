{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["schema_version", "scenarios"],
  "properties": {
    "schema_version": {"type": "integer", "minimum": 1},
    "scenarios": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "description", "action_id"],
        "properties": {
          "id": {"type": "string", "pattern": "^[a-z0-9-]+$"},
          "description": {"type": "string", "minLength": 8},
          "action_id": {"type": "string", "pattern": "^ops\\.[a-z0-9]+(?:\\.[a-z0-9-]+)+$"},
          "entrypoint": {"type": "string"},
          "script": {"type": "string"},
          "compose": {
            "type": "object",
            "required": ["stack", "observe", "datasets", "load"],
            "properties": {
              "stack": {"type": "boolean"},
              "observe": {"type": "boolean"},
              "datasets": {"type": "boolean"},
              "load": {"type": "boolean"}
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false,
        "oneOf": [
          {"required": ["entrypoint", "compose"]},
          {"required": ["script"]}
        ]
      }
    }
  },
  "additionalProperties": false
}
