{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "stack_version_hash",
    "status",
    "run_id",
    "generated_at_utc",
    "artifacts"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "stack_version_hash": {
      "type": "string",
      "minLength": 8
    },
    "status": {
      "type": "string",
      "enum": [
        "passed",
        "failed"
      ]
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at_utc": {
      "type": "string",
      "minLength": 1
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "helm_values_used",
        "k6_summary",
        "metrics_snapshot",
        "trace_snapshot",
        "dashboard_screenshot",
        "logs_excerpt",
        "rendered_manifests",
        "pass_fail_summary"
      ],
      "properties": {
        "helm_values_used": {
          "type": "string",
          "minLength": 1
        },
        "k6_summary": {
          "type": "string",
          "minLength": 1
        },
        "metrics_snapshot": {
          "type": "string",
          "minLength": 1
        },
        "trace_snapshot": {
          "type": "string",
          "minLength": 1
        },
        "dashboard_screenshot": {
          "type": "string",
          "minLength": 1
        },
        "logs_excerpt": {
          "type": "string",
          "minLength": 1
        },
        "rendered_manifests": {
          "type": "string",
          "minLength": 1
        },
        "pass_fail_summary": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  },
  "$id": "ops/schema/report/stack-contract.schema.json"
}
