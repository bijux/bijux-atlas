{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "release",
    "bundle_paths",
    "status",
    "generated_by",
    "generated_from"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "release": {
      "type": "string",
      "minLength": 1
    },
    "generated_by": {
      "type": "string",
      "minLength": 1
    },
    "generated_from": {
      "type": "string",
      "minLength": 1
    },
    "bundle_paths": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "ready",
        "blocked"
      ]
    }
  },
  "$id": "ops/schema/report/release-evidence-bundle.schema.json"
}
