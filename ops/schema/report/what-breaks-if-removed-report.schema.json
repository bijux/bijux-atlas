{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "generated_by",
    "status",
    "targets"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "generated_by": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail"
      ]
    },
    "targets": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "impact",
          "consumers"
        ],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1
          },
          "impact": {
            "type": "string",
            "enum": [
              "breaking",
              "warning",
              "none"
            ]
          },
          "consumers": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  },
  "$id": "ops/schema/report/what-breaks-if-removed-report.schema.json"
}
