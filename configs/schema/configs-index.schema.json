{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "schema_version",
    "kind",
    "registry_path",
    "max_groups",
    "max_depth",
    "max_group_depth",
    "root_files",
    "groups",
    "exclusions"
  ],
  "properties": {
    "schema_version": { "type": "integer", "minimum": 1 },
    "kind": { "const": "configs-index" },
    "registry_path": { "type": "string", "minLength": 1 },
    "max_groups": { "type": "integer", "minimum": 1 },
    "max_depth": { "type": "integer", "minimum": 1 },
    "max_group_depth": { "type": "integer", "minimum": 0 },
    "root_files": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "owner",
          "schema_owner",
          "stability",
          "tool_entrypoints",
          "counts",
          "files",
          "schemas"
        ],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "owner": { "type": "string", "minLength": 1 },
          "schema_owner": { "type": "string", "minLength": 1 },
          "stability": { "type": "string", "enum": ["stable", "experimental"] },
          "tool_entrypoints": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "counts": {
            "type": "object",
            "required": ["public", "internal", "generated", "covered", "schemas"],
            "properties": {
              "public": { "type": "integer", "minimum": 0 },
              "internal": { "type": "integer", "minimum": 0 },
              "generated": { "type": "integer", "minimum": 0 },
              "covered": { "type": "integer", "minimum": 0 },
              "schemas": { "type": "integer", "minimum": 0 }
            },
            "additionalProperties": false
          },
          "files": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "schemas": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        },
        "additionalProperties": false
      }
    },
    "exclusions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["pattern", "reason", "approved_by", "expires_on"],
        "properties": {
          "pattern": { "type": "string", "minLength": 1 },
          "reason": { "type": "string", "minLength": 1 },
          "approved_by": { "type": "string", "minLength": 1 },
          "expires_on": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
