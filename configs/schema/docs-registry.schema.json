{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bijux.dev/schema/docs-registry.schema.json",
  "title": "Docs registry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "documents",
    "generated_by",
    "generated_from",
    "project_version",
    "schema_version"
  ],
  "properties": {
    "documents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "area",
          "audience",
          "doc_type",
          "last_reviewed",
          "owner",
          "path",
          "stability",
          "title",
          "topic"
        ],
        "properties": {
          "area": { "type": "string", "minLength": 1 },
          "audience": { "type": "string", "minLength": 1 },
          "crate": { "type": "string", "minLength": 1 },
          "doc_type": { "type": "string", "minLength": 1 },
          "doc_version": { "type": "string", "minLength": 1 },
          "keywords": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "last_reviewed": { "type": "string", "minLength": 1 },
          "lifecycle": { "type": "string", "minLength": 1 },
          "owner": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "review_due": { "type": "string", "minLength": 1 },
          "stability": { "type": "string", "minLength": 1 },
          "tags": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "title": { "type": "string", "minLength": 1 },
          "topic": { "type": "string", "minLength": 1 }
        }
      }
    },
    "generated_by": { "type": "string", "minLength": 1 },
    "generated_from": { "type": "string", "minLength": 1 },
    "project_version": { "type": "string", "minLength": 1 },
    "schema_version": { "type": "integer", "minimum": 1 }
  }
}
