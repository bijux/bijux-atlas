{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["schema_version", "exceptions"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "exceptions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "rule", "path", "owner", "issue", "expiry", "justification"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^ATLAS-LAYER-EXC-[0-9]{4}$"
          },
          "rule": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "owner": {
            "type": "string",
            "minLength": 1
          },
          "issue": {
            "type": "string",
            "minLength": 1
          },
          "expiry": {
            "type": "string",
            "format": "date"
          },
          "justification": {
            "type": "string",
            "minLength": 1
          },
          "replacement_mechanism": {
            "type": "string",
            "minLength": 1
          },
          "severity": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
