{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "kind",
    "policies"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "kind": {
      "const": "configs-schema-versioning-policy"
    },
    "policies": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "schema",
          "compatibility",
          "versioning"
        ],
        "properties": {
          "schema": {
            "type": "string",
            "minLength": 1
          },
          "compatibility": {
            "type": "string",
            "enum": [
              "backward-compatible"
            ]
          },
          "versioning": {
            "type": "string",
            "enum": [
              "locked"
            ]
          }
        }
      }
    }
  }
}
