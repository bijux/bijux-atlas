{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ops scenarios manifest",
  "type": "object",
  "required": ["scenarios"],
  "properties": {
    "scenarios": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["command"],
        "properties": {
          "command": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "description": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
