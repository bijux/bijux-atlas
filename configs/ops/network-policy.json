{
  "schema_version": 1,
  "default_mode": "allow",
  "forbid_when": {
    "env_any": ["CI_NETWORK_FORBID", "ATLASCTL_OPS_NETWORK_FORBID"],
    "env_value_true": ["1", "true", "yes", "on"]
  },
  "network_invocations": [
    ["curl"],
    ["wget"],
    ["docker", "pull"],
    ["docker", "push"],
    ["docker", "login"],
    ["helm", "repo", "add"],
    ["helm", "repo", "update"],
    ["git", "clone"],
    ["git", "fetch"]
  ],
  "allow_when_forbidden": [
    ["kubectl"],
    ["helm", "template"],
    ["helm", "uninstall"],
    ["helm", "install"],
    ["helm", "upgrade"]
  ]
}
