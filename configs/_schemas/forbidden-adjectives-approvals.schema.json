{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Forbidden Adjectives Approvals",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "approvals"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "approvals": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "term",
          "reason",
          "approval_id",
          "expires_on"
        ],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1
          },
          "term": {
            "type": "string",
            "minLength": 1
          },
          "reason": {
            "type": "string",
            "minLength": 1
          },
          "approval_id": {
            "type": "string",
            "minLength": 1
          },
          "expires_on": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "line": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    }
  }
}
