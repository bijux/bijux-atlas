{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "owner", "make_targets", "ops_run_commands", "core_targets"],
  "properties": {
    "schema_version": {"type": "integer", "minimum": 1},
    "owner": {"type": "string", "minLength": 1},
    "make_target_prefixes": {"type": "array", "items": {"type": "string"}},
    "make_targets": {"type": "array", "minItems": 1, "items": {"type": "string", "minLength": 1}},
    "core_targets": {"type": "array", "minItems": 1, "items": {"type": "string", "minLength": 1}},
    "ops_run_commands": {"type": "array", "minItems": 1, "items": {"type": "string", "pattern": "^ops/run/.+\\.sh$"}}
  }
}
