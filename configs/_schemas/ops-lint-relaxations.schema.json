{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "relaxations"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "relaxations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "check_id",
          "owner",
          "issue",
          "expires_on"
        ],
        "properties": {
          "check_id": {
            "type": "string",
            "minLength": 1
          },
          "owner": {
            "type": "string",
            "minLength": 1
          },
          "issue": {
            "type": "string",
            "minLength": 1
          },
          "expires_on": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "reason": {
            "type": "string"
          }
        }
      }
    }
  }
}
