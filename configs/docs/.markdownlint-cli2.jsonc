{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint-cli2/main/schema/markdownlint-cli2-config-schema.json",
  "globs": [
    "docs/operations/*.md",
    "docs/operations/reference/*.md",
    "ops/*.md"
  ],
  "ignores": [
    "docs/_generated/**",
    "ops/_generated.example/**"
  ],
  "config": {
    "MD013": false,
    "MD014": false,
    "MD022": false,
    "MD029": false,
    "MD032": false,
    "MD033": false,
    "MD041": false
  }
}
