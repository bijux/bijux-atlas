{
  "schema_version": 1,
  "max_groups": 15,
  "max_depth": 4,
  "max_group_depth": 2,
  "root_files": [
    "configs/README.md",
    "configs/CONTRACT.md",
    "configs/CONSUMERS.json",
    "configs/OWNERS.json",
    "configs/SCHEMAS.json",
    "configs/configs.contracts.json",
    "configs/inventory.json"
  ],
  "groups": [
    {
      "name": "ci",
      "owner": "platform",
      "schema_owner": "platform",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas configs validate",
        "bijux dev atlas configs list"
      ],
      "public_files": [
        "configs/ci/*.json"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": [
        "configs/contracts/ci-run-output.schema.json"
      ]
    },
    {
      "name": "docs",
      "owner": "docs-governance",
      "schema_owner": "docs-governance",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas docs build",
        "bijux dev atlas docs lint"
      ],
      "public_files": [
        "configs/docs/.markdownlint-cli2.jsonc",
        "configs/docs/.vale.ini",
        "configs/docs/*.json",
        "configs/docs/*.jsonc",
        "configs/docs/*.txt"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": [
        "configs/schema/configs-consumer-map.schema.json",
        "configs/schema/configs-owner-map.schema.json",
        "configs/contracts/inventory-configs.schema.json"
      ]
    },
    {
      "name": "inventory",
      "owner": "platform",
      "schema_owner": "platform",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas configs list",
        "bijux dev atlas configs inventory"
      ],
      "public_files": [
        "configs/inventory/configs.json",
        "configs/inventory/*.json"
      ],
      "internal_files": [],
      "generated_files": [
        "configs/_generated/configs-index.json"
      ],
      "schemas": [
        "configs/contracts/inventory-configs.schema.json",
        "configs/contracts/inventory-owners.schema.json",
        "configs/schema/configs-index.schema.json"
      ]
    },
    {
      "name": "layout",
      "owner": "platform",
      "schema_owner": "platform",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas check tree-budgets",
        "bijux dev atlas configs validate"
      ],
      "public_files": [
        "configs/layout/*",
        "configs/repo/*.json",
        "configs/gates/*.json",
        "configs/coverage/*",
        "configs/shellcheck/*",
        "configs/product/*"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": [
        "configs/contracts/inventory-budgets.schema.json"
      ]
    },
    {
      "name": "make",
      "owner": "platform",
      "schema_owner": "platform",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas contracts make",
        "make contracts"
      ],
      "public_files": [
        "configs/make/*.json"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": [
        "configs/contracts/inventory-make.schema.json"
      ]
    },
    {
      "name": "meta",
      "owner": "platform",
      "schema_owner": "platform",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas configs verify"
      ],
      "public_files": [
        "configs/meta/*.json"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": [
        "configs/schema/meta-ownership.schema.json"
      ]
    },
    {
      "name": "nextest",
      "owner": "platform",
      "schema_owner": "platform",
      "stability": "stable",
      "tool_entrypoints": [
        "cargo nextest run"
      ],
      "public_files": [
        "configs/nextest/*.toml"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": []
    },
    {
      "name": "openapi",
      "owner": "api-contracts",
      "schema_owner": "api-contracts",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas check registry doctor"
      ],
      "public_files": [
        "configs/openapi/**/*.json"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": [
        "configs/schema/public-surface.schema.json"
      ]
    },
    {
      "name": "ops",
      "owner": "bijux-atlas-operations",
      "schema_owner": "bijux-atlas-operations",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas contracts ops",
        "bijux dev atlas ops list"
      ],
      "public_files": [
        "configs/ops/*.json",
        "configs/ops/*.txt",
        "configs/ops/*.schema.json",
        "configs/ops/*/*.json",
        "configs/ops/*/*.txt"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": [
        "configs/contracts/inventory-ops.schema.json",
        "configs/ops/env.schema.json",
        "configs/ops/scenarios.schema.json"
      ]
    },
    {
      "name": "perf",
      "owner": "bijux-atlas-performance",
      "schema_owner": "bijux-atlas-performance",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas ops load plan",
        "bijux dev atlas ops load report"
      ],
      "public_files": [
        "configs/perf/*.json"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": [
        "configs/contracts/inventory-configs.schema.json"
      ]
    },
    {
      "name": "policy",
      "owner": "platform",
      "schema_owner": "platform",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas policies validate",
        "bijux dev atlas configs lint"
      ],
      "public_files": [
        "configs/policy/*.json",
        "configs/policy/*.yml",
        "configs/policy/*.txt"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": [
        "configs/policy/policy.schema.json",
        "configs/schema/policy-relaxations.schema.json"
      ]
    },
    {
      "name": "rust",
      "owner": "rust-foundation",
      "schema_owner": "rust-foundation",
      "stability": "stable",
      "tool_entrypoints": [
        "cargo fmt",
        "cargo clippy"
      ],
      "public_files": [
        "configs/rust/*.toml",
        "configs/rust/*.json"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": [
        "configs/contracts/inventory-configs.schema.json"
      ]
    },
    {
      "name": "schema",
      "owner": "platform",
      "schema_owner": "platform",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas configs validate",
        "bijux dev atlas contracts configs"
      ],
      "public_files": [
        "configs/schema/configs-consumer-map.schema.json",
        "configs/schema/configs-contracts.schema.json",
        "configs/schema/configs-index.schema.json",
        "configs/schema/configs-owner-map.schema.json",
        "configs/schema/configs-schema-index.schema.json",
        "configs/schema/configs-schema-map.schema.json",
        "configs/schema/meta-ownership.schema.json",
        "configs/schema/public-surface.schema.json",
        "configs/schema/versioning-policy.json"
      ],
      "internal_files": [
        "configs/schema/config-compiler-report.schema.json",
        "configs/schema/configs-ownership.schema.json",
        "configs/schema/forbidden-adjectives-approvals.schema.json",
        "configs/schema/hpa-safety-caps.schema.json",
        "configs/schema/layer-live-diff-allowlist.schema.json",
        "configs/schema/layer-relaxations.schema.json",
        "configs/schema/ops-lint-relaxations.schema.json",
        "configs/schema/policy-relaxations.schema.json",
        "configs/schema/target-renames.schema.json",
        "configs/schema/tool-versions.schema.json",
        "configs/schema/versioning-policy.schema.json",
        "configs/contracts/*.json"
      ],
      "generated_files": [
        "configs/schema/generated/*.json"
      ],
      "schemas": [
        "configs/schema/*.json",
        "configs/contracts/*.json"
      ]
    },
    {
      "name": "security",
      "owner": "security",
      "schema_owner": "security",
      "stability": "stable",
      "tool_entrypoints": [
        "cargo deny",
        "cargo audit"
      ],
      "public_files": [
        "configs/security/*.toml"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": []
    },
    {
      "name": "slo",
      "owner": "bijux-atlas-operations",
      "schema_owner": "bijux-atlas-operations",
      "stability": "stable",
      "tool_entrypoints": [
        "bijux dev atlas ops report readiness"
      ],
      "public_files": [
        "configs/slo/*.json"
      ],
      "internal_files": [],
      "generated_files": [],
      "schemas": [
        "configs/contracts/inventory-configs.schema.json"
      ]
    }
  ],
  "exclusions": [
    {
      "pattern": "configs/docs/.vale/styles/**",
      "reason": "vale style bundles stay explicitly excluded until docs config flattening lands",
      "approved_by": "docs-governance",
      "expires_on": "2027-12-31"
    },
    {
      "pattern": "configs/ops/perf/baselines/**",
      "reason": "legacy deep perf baselines stay explicit until perf config flattening",
      "approved_by": "perf-governance",
      "expires_on": "2027-12-31"
    }
  ]
}
