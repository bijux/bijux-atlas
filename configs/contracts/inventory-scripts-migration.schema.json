{
  "type": "object",
  "additionalProperties": false,
  "required": [
    "kind",
    "entries",
    "bin_commands",
    "area_indexes"
  ],
  "properties": {
    "kind": {
      "const": "scripts-migration"
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "extension",
          "is_executable",
          "tags"
        ],
        "properties": {
          "path": {
            "type": "string",
            "pattern": "^scripts/.+"
          },
          "extension": {
            "type": "string"
          },
          "is_executable": {
            "type": "boolean"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "library_helper",
                "report_emitter",
                "gate_runner",
                "ops_orchestrator",
                "docs_generator",
                "config_validator",
                "policy_checker",
                "make_integration"
              ]
            }
          }
        }
      }
    },
    "bin_commands": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "script",
          "command",
          "mapped_cli"
        ],
        "properties": {
          "script": {
            "type": "string",
            "pattern": "^scripts/bin/.+"
          },
          "command": {
            "type": "string"
          },
          "mapped_cli": {
            "type": "string"
          }
        }
      }
    },
    "area_indexes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "index",
          "area",
          "mapped_cli_group"
        ],
        "properties": {
          "index": {
            "type": "string",
            "pattern": "^scripts/areas/.+/INDEX\\.md$"
          },
          "area": {
            "type": "string"
          },
          "mapped_cli_group": {
            "type": "string"
          }
        }
      }
    }
  }
}
