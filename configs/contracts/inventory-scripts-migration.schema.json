{
  "type": "object",
  "additionalProperties": false,
  "required": [
    "kind",
    "entries"
  ],
  "properties": {
    "kind": {
      "const": "scripts-migration"
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "extension",
          "is_executable",
          "tags"
        ],
        "properties": {
          "path": {
            "type": "string",
            "pattern": "^scripts/.+"
          },
          "extension": {
            "type": "string"
          },
          "is_executable": {
            "type": "boolean"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "library_helper",
                "report_emitter",
                "gate_runner",
                "ops_orchestrator",
                "docs_generator",
                "config_validator",
                "policy_checker",
                "make_integration"
              ]
            }
          }
        }
      }
    }
  }
}
