{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Product Artifact Manifest",
  "type": "object",
  "required": [
    "schema_version",
    "kind",
    "run_id",
    "version",
    "artifacts",
    "meta"
  ],
  "properties": {
    "schema_version": { "const": 1 },
    "kind": { "const": "product-artifact-manifest" },
    "run_id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "path", "kind", "sha256", "size_bytes"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "kind": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "size_bytes": { "type": "integer", "minimum": 0 }
        },
        "additionalProperties": true
      }
    },
    "meta": {
      "type": "object",
      "required": ["allowed_roots", "git_sha", "pins_digest", "schema_versions"],
      "properties": {
        "allowed_roots": { "type": "array", "items": { "type": "string" } },
        "tool_versions_hint": { "type": "string" },
        "git_sha": { "type": "string", "minLength": 1 },
        "pins_digest": { "type": "string" },
        "schema_versions": { "type": "object" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
